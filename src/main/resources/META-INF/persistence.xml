<persistence version="2.0"
xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
>

    <persistence-unit name="UnitClients">
        <class>org.clients.Client</class>
        <properties>
            <property name= "hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.user"
                      value="placeholder" />
            <property name="jakarta.persistence.jdbc.password" value="placeholder" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mvnHbn" />
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
        </properties>

    </persistence-unit>
</persistence>